  "devDependencies": {
    "@11ty/eleventy": "0.12.1",
    "eslint": "7.31.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "prettier": "2.3.2",
    "stylelint": "13.13.1",
